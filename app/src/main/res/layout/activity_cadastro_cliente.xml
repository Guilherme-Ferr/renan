<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CadastroCliente">

    <LinearLayout
        android:id="@+id/lv_topo_cadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_gravity="center"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/iv_logo_cadastro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/logotcc"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_vamoscomecar_cadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vamos começar!"
            android:layout_marginTop="9dp"
            android:textColor="@color/Primaria"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_crie_seua_nova_conta_cadastro_cliente"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:text="Crie sua nova conta e contrate clientes para sua reforma"
            android:textColor="@color/Preto" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_cadastro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_nomeCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_login_background"
                android:hint="Nome Completo"
                android:padding="15dp"
                android:visibility="visible"/>

            <EditText
                android:id="@+id/et_emailCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_login_background"
                android:hint="E-mail mais utilizado"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                android:visibility="visible"/>

            <EditText
                android:id="@+id/et_celularCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_login_background"
                android:hint="Celular (com DDD)"
                android:inputType="numberDecimal"
                android:padding="15dp"
                android:visibility="visible"/>

            <EditText
                android:id="@+id/et_cepCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_login_background"
                android:hint="CEP"
                android:inputType="numberDecimal"
                android:padding="15dp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/et_ruaCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_login_background"
                android:hint="Rua"
                android:padding="15dp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/et_estadoCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_login_background"
                android:hint="Estado"
                android:padding="15dp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/et_cidadeCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_login_background"
                android:hint="Cidade "
                android:padding="15dp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/et_bairroCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_login_background"
                android:hint="Bairro"
                android:padding="15dp"
                android:visibility="visible"/>

            <EditText
                android:id="@+id/et_numeroCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_login_background"
                android:hint="Número da residência"
                android:inputType="numberDecimal"
                android:padding="15dp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/et_datadenascimentoCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_login_background"
                android:hint="Clique e insira sua data de nascimento"
                android:inputType="datetime"
                android:padding="15dp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/et_cpfCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_login_background"
                android:hint="CPF"
                android:inputType="numberDecimal"
                android:padding="15dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/et_rgCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_login_background"
                android:hint="RG"
                android:inputType="numberDecimal"
                android:padding="15dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/et_roomCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_login_background"
                android:hint="Digite um número para entrar em contato com o prestador"
                android:inputType="numberDecimal"
                android:padding="15dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/et_senhaCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_login_background"
                android:hint="Senha"
                android:padding="15dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/button_cadastrarCliente"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="11dp"
                android:layout_marginRight="20dp"
                android:padding="15dp"
                android:text="Cadastrar-me"
                android:visibility="visible" />
        </LinearLayout>
    </ScrollView>
</LinearLayout >