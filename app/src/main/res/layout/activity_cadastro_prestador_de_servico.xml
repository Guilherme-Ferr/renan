<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CadastroPrestadorDeServico">

    <LinearLayout
        android:id="@+id/lv_topo_cadastro_prestador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_gravity="center"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/iv_logo_cadastro_prestador"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/logotcc" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_vamoscomecar_cadastro_prestador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Vamos começar!"
            android:layout_marginTop="9dp"
            android:textColor="@color/Primaria" />

        <TextView
            android:id="@+id/tv_crie_seua_nova_conta_cadastro_prestador"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:text="Crie sua nova conta e preste suas especialidades como serviço"
            android:textColor="@color/Preto" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_cadastro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_nomePrestador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_login_background"
                android:hint="Nome Completo"
                android:padding="15dp"
                android:visibility="visible"/>

            <EditText
                android:id="@+id/et_emailPrestador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_login_background"
                android:hint="E-mail mais utilizado"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                android:visibility="visible"/>

            <EditText
                android:id="@+id/et_celularPrestador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_login_background"
                android:hint="Celular (com DDD)"
                android:inputType="numberDecimal"
                android:padding="15dp"
                android:visibility="visible"/>

            <EditText
                android:id="@+id/et_cepPrestador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_login_background"
                android:hint="CEP"
                android:inputType="numberDecimal"
                android:padding="15dp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/et_ruaPrestador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_login_background"
                android:hint="Rua"
                android:padding="15dp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/et_estadoPrestador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_login_background"
                android:hint="Estado"
                android:padding="15dp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/et_cidadePrestador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_login_background"
                android:hint="Cidade "
                android:padding="15dp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/et_bairroPrestador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_login_background"
                android:hint="Bairro"
                android:padding="15dp"
                android:visibility="visible"/>

            <EditText
                android:id="@+id/et_numeroPrestador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_login_background"
                android:hint="Número da residência"
                android:inputType="numberDecimal"
                android:padding="15dp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/et_datadenascimentoPrestador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_login_background"
                android:hint="Clique e insira sua data de nascimento"
                android:inputType="datetime"
                android:padding="15dp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/et_cpfPrestador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_login_background"
                android:hint="CPF"
                android:inputType="numberDecimal"
                android:padding="15dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/et_rgPrestador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_login_background"
                android:hint="RG"
                android:inputType="numberDecimal"
                android:padding="15dp"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/et_roomPrestador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_login_background"
                android:hint="Digite um número para entrar em contato com o prestador"
                android:inputType="numberDecimal"
                android:padding="15dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/et_senhaPrestador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_login_background"
                android:hint="Senha"
                android:padding="15dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/button_cadastrarPrestador"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="11dp"
                android:layout_marginRight="20dp"
                android:padding="15dp"
                android:text="Cadastrar-me"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>