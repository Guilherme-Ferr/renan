<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/Branco">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            cardBackgroundColor="android:blue"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            app:cardBackgroundColor="#074EAD"
            app:cardCornerRadius="0dp" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/profile"
                android:layout_marginLeft="45dp"
                />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/money"
                android:layout_gravity="right"
                android:layout_marginRight="12dp"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:text="Nome do Prestador"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="25dp"
                android:textSize="18dp"
                android:textColor="@color/Branco"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="180dp"
                android:layout_height="20dp"
                android:text="Função do Prestador"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="25dp"
                android:textSize="15dp"
                android:textColor="@color/Branco"
                android:layout_marginTop="30dp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/less"
                android:rotation="270"/>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        cardBackgroundColor="android:blue"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:cardBackgroundColor="#0000" />

    <androidx.cardview.widget.CardView
        cardBackgroundColor="android:blue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#223263">


        <androidx.cardview.widget.CardView
            android:layout_width="310dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            app:cardBackgroundColor="#F5F5F5"
            app:cardCornerRadius="19dp"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="30dp"
            >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Digite uma mensagem..." />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/attach"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:rotation="340"/>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/button"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:text="Button"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:shadowColor="#223263"
            />

        <ImageView
            android:id="@+id/imageAudio"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            app:srcCompat="@drawable/audio"
            android:layout_marginRight="10dp"/>


    </androidx.cardview.widget.CardView>


</LinearLayout>