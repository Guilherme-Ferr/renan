<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            cardBackgroundColor="android:blue"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            app:cardBackgroundColor="#074EAD"
            app:cardCornerRadius="0dp" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        cardBackgroundColor="android:blue"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:cardBackgroundColor="#0000" />

    <androidx.cardview.widget.CardView
        cardBackgroundColor="android:blue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#223263">


        <androidx.cardview.widget.CardView
            android:layout_width="310dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            app:cardBackgroundColor="#F5F5F5"
            app:cardCornerRadius="19dp"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="30dp"
            >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Digite uma mensagem..." />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/attach"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:rotation="340"/>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/button"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:text="Button"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:backgroundTint="#0000000"
            android:shadowColor="#223263"
            />

        <ImageView
            android:id="@+id/imageAudio"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            app:srcCompat="@drawable/audio"
            android:layout_marginRight="30dp"/>


    </androidx.cardview.widget.CardView>


</LinearLayout>