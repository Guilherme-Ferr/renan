<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Branco"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            cardBackgroundColor="android:blue"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            app:cardBackgroundColor="#074EAD"
            app:cardCornerRadius="0dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                app:srcCompat="@drawable/profile" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="12dp"
                app:srcCompat="@drawable/money" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="8dp"
                android:text="Nome do Prestador"
                android:textColor="@color/Branco"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="180dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:text="Função do Prestador"
                android:textColor="@color/Branco"
                android:textSize="15dp" />


            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:rotation="270"
                app:srcCompat="@drawable/less" />


        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <androidx.cardview.widget.CardView
        cardBackgroundColor="android:blue"
        android:layout_width="match_parent"
        android:layout_height="604dp"
        app:cardBackgroundColor="@color/Branco">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/pngegg" />



        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="100dp"
            app:srcCompat="@drawable/fotoChat" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="200dp"
            app:srcCompat="@drawable/pngegg" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="400dp"
            app:srcCompat="@drawable/pngegg" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="300dp"
            app:srcCompat="@drawable/fotoChat" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="500dp"
            app:srcCompat="@drawable/fotoChat" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="600dp"
            app:srcCompat="@drawable/pngegg" />

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="45dp"
            app:cardBackgroundColor="@color/Cinza"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="90dp"
            app:cardCornerRadius="19dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nós podemos marcar?"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="16dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="45dp"
            app:cardBackgroundColor="#074EAD"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="130dp"
            app:cardCornerRadius="19dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quando você pode vir?"
                android:layout_gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="16dp"/> />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="45dp"
            app:cardBackgroundColor="@color/Cinza"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="90dp"
            app:cardCornerRadius="19dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No sabado pode ser?"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="16dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="45dp"
            app:cardBackgroundColor="#074EAD"
            android:layout_marginTop="310dp"
            android:layout_marginLeft="170dp"
            app:cardCornerRadius="19dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Isso, está otimo!!!"
                android:layout_gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="16dp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="260dp"
            android:layout_height="45dp"
            app:cardBackgroundColor="@color/Cinza"
            android:layout_marginTop="410dp"
            android:layout_marginLeft="90dp"
            app:cardCornerRadius="19dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Combinado, umas 14:00 estou aí "
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="16dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="45dp"
            app:cardBackgroundColor="#074EAD"
            android:layout_marginTop="510dp"
            android:layout_marginLeft="210dp"
            app:cardCornerRadius="19dp">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Combinado!!!"
                android:layout_gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="16dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="240dp"
            android:layout_height="45dp"
            app:cardBackgroundColor="@color/Cinza"
            android:layout_marginTop="610dp"
            android:layout_marginLeft="90dp"
            app:cardCornerRadius="19dp">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ok, até logo! "
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="16dp" />
        </androidx.cardview.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        cardBackgroundColor="android:blue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#223263">


        <androidx.cardview.widget.CardView
            android:layout_width="310dp"
            android:layout_height="35dp"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="14dp"
            app:cardBackgroundColor="#F5F5F5"
            app:cardCornerRadius="19dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Digite uma mensagem..."
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:rotation="340"
                app:srcCompat="@drawable/attach" />

        </androidx.cardview.widget.CardView>



        <ImageView
            android:id="@+id/imageAudio"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/audio" />

    </androidx.cardview.widget.CardView>

</LinearLayout>
